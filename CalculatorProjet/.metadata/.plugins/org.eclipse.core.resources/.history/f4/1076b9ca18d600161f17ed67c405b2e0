	public void Calculation(char numberSymbol){
		
		int asciiValue = (int) numberSymbol;
		if((asciiValue > 47 && asciiValue < 58) || asciiValue == 46){
			tempNumber += "" + numberSymbol; //(asciiValue - 48) ;
		}else if(numberSymbol != '='){
			isInputOkay = false;
		}
		
		switch(numberSymbol){
			case '+':
				
				break;
				
			case '-':
				break;
				
			case '*':
				break;
				
			case '/':
				break;
				
			case '%':
				break;
			
			case '=' :
				break;
		}
	}
	
